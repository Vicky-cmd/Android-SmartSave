<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/file_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_column="1"
        android:text=".FT"
        android:layout_marginStart="25sp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/file_type_img"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/file_type"
        app:layout_constraintTop_toTopOf="@+id/file_type"
        app:layout_constraintBottom_toBottomOf="@+id/file_type"
        app:layout_constraintEnd_toEndOf="@+id/file_type"
        android:layout_column="1"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/file_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginEnd="10dp"
        android:text="FileName"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/file_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/file_timestamp"/>

    <TextView
        android:id="@+id/file_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginEnd="10sp"
        android:text="TimeStamp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/file_type"
        app:layout_constraintTop_toBottomOf="@+id/file_Name" />

    <ImageButton
        android:id="@+id/recycle_view_optBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_more_vert_black_36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10sp"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>