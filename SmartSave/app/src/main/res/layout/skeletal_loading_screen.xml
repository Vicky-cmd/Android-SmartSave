<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/skeletal_height"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/skelCol1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/img_news"
        android:layout_width="90dp"
        android:layout_height="80sp"
        android:layout_marginBottom="7sp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginTop="7sp"
        android:layout_column="1"
        android:layout_marginStart="25sp"
        android:background="@color/light_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/topText"
        android:layout_width="150sp"
        android:layout_height="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/btn_txt"
        android:background="@color/light_transparent"
        app:layout_constraintBottom_toTopOf="@id/bottomText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toEndOf="@id/img_news"
        app:layout_constraintTop_toTopOf="@id/view" />

    <View
        android:id="@+id/bottomText"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_marginBottom="@dimen/btn_txt"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="10sp"
        android:background="@color/light_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_news"
        app:layout_constraintTop_toBottomOf="@id/topText" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/skelCol1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>